# Copy this file to .env and adjust as needed
# cp .env.example .env

# --- AIRFLOW SYSTEM CONFIG ---
AIRFLOW_UID=50000
# AIRFLOW_PROJ_DIR=./  # Defaults to current dir

# --- MINIO / S3 CONFIGURATION ---
# Default credentials for local minio (user/password)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Internal endpoint (for Docker containers)
MINIO_ENDPOINT=http://minio:9000
# External endpoint (for local development/debugging)
MINIO_ENDPOINT_EXTERNAL=http://localhost:9000
MINIO_REGION=us-east-1

# Buckets
BUCKET_BRONZE=bronze
BUCKET_SILVER=silver
BUCKET_GOLD=gold

# --- CLICKHOUSE CONFIGURATION ---
CLICKHOUSE_DB=f1_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_HOST_EXTERNAL=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000

# --- API CONFIGURATION (Ergast/Jolpica) ---
API_BASE_URL=https://api.jolpi.ca/ergast/f1
API_TIMEOUT=30
# Pagination and Rate Limiting
API_PAGE_LIMIT=100
API_RATE_LIMIT_PER_SEC=4
API_RATE_LIMIT_PER_MIN=200
API_BURST_LIMIT=10
# Concurrency
MAX_CONCURRENT_WORKERS=3

# --- RETRY STRATEGY ---
RETRY_MAX_ATTEMPTS=10
RETRY_MIN_WAIT=2
RETRY_MAX_WAIT=60
